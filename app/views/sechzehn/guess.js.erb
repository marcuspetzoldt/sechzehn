<% unless @guess.nil? %>
  <% if @guess > 0 %>
    $e = $('div#guesses').children(':first')
    $e.append('<%= ":#{@guess}" %>')
    $e.css('font-size',  '<%= 100 + (@guess-1)*4 %>%')
  <% else %>
    $('div#guesses').children(':first').css('color', 'red')
  <% end %>
  $('td#cwords').html('<%= @cwords %>')
  $('td#cpoints').html('<%= @cpoints %>')
<% end %>
