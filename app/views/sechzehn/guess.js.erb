<% unless @guess.nil? %>
  $e = $('span#word_<%= @word %>')
  <% if @guess > 0 %>
    $e.append('<%= ":#{@guess}" %>')
    $e.css('font-size',  '<%= 100 + (@guess-1)*4 %>%')
  <% else %>
    $e.css('color', 'red')
  <% end %>
  $('td#cwords').html('<%= @cwords %>')
  $('td#cpoints').html('<%= @cpoints %>')
<% end %>
