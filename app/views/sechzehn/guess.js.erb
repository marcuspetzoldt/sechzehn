<% unless @guess.nil? %>
  $e = $('span#word_<%= @guess[:word] %>');
  <% if @guess[:points] > 0 %>
    $e.append('<%= ":#{@guess[:points]}" %>');
    $e.css('font-size',  '<%= 100 + (@guess[:points]-1)*4 %>%');
  <% else %>
    $e.css('color', 'red');
  <% end %>
  $('td#cwords').html('<%= @guess[:cwords] %>');
  $('td#cpoints').html('<%= @guess[:cpoints] %>');
<% end %>
<% if current_user.nil? %>
  alert("Das Session-Cookie ist nicht mehr vorhanden, oder kann nicht gelesen werden.");
  window.Location.href='/';
  window.location.reload();
<% end %>
