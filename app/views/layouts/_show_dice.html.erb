<% i=0 %>
<% @field.each do |row| %>
  <% row.each do |letter| %>
    <div id="<%= "l#{i}" %>" class="letter<%= letter[0] %>">
      <% if letter[1] != 'qu' %>
        <span class="vmiddle"><%= letter[1].upcase %></span>
      <% else %>
        <span class="vmiddle">Qu</span>
      <% end %>
      <% i=i+1 %>
    </div>
  <% end %>
  <div style="clear: left"></div>
<% end %>

